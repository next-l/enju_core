= form_for(@role) do |f|
  = f.error_messages
  .form-group
    = f.label :name
    br
    = f.text_field :name
  .form-group
    = f.label :display_name
    br
    = f.text_area :display_name
  .form-group
    = f.label :note
    br
    = f.text_area :note, class: 'form-control'
  .form-control
    = f.submit data: {confirm: t('page.are_you_sure')}, class: 'btn btn-default'
