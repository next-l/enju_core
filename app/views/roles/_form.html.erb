<%= form_for(@role) do |f| %>
  <%= f.error_messages %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :display_name %>
    <%= f.text_area :display_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :note %>
    <%= f.text_area :note, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit data: {confirm: t('page.are_you_sure')}, class: 'btn btn-primary' %>
  </div>
<% end %>
